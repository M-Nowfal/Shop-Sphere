<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Shop-Sphere</title>
	<link rel="icon" type="image/png" href="/images/shopping-cart.png">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
		integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
		integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
		crossorigin="anonymous" referrerpolicy="no-referrer" />
	<style>
		html {
			cursor: default;
		}

		.logo {
			width: 30px;
		}

		.navbar {
			position: fixed;
			width: 100%;
			z-index: 2;
			top: 0;
		}

		@media (max-width: 500px) {
			.navbar-brand {
				display: none;
			}

			.logo {
				display: block;
			}

			.offcanvas {
				width: 70% !important;
			}
		}

		@media (min-width: 501px) {
			.navbar-brand {
				display: block;
			}

			.logo {
				display: none;
			}

			.offcanvas-body p {
				cursor: pointer;
				padding: 10px;
				transition: 0.25s;
			}

			.offcanvas-body p:hover {
				margin-left: 10px;
				text-shadow: 0px 0px 3px wheat;
				background-color: rgb(25, 25, 25);
				border-radius: 5px;
				padding: 10px 10px 10px 20px;
				transition: 0.25s;
			}
		}

		hr {
			color: aliceblue;
		}

		.offcanvas-header {
			box-shadow: -5px 0px 5px white;
			text-align: center;
			width: 100%;
		}
	</style>
</head>

<body>
	<nav class="navbar navbar-light bg-dark">
		<div class="container-fluid">
			<div class="d-flex align-items-center">
				<button class="btn bg-success me-2" type="button" data-bs-toggle="offcanvas"
					data-bs-target="#offcanvasWithBothOptions" aria-controls="offcanvasWithBothOptions">
					<i class="fa-solid fa-bars text-white"></i>
				</button>
				<a class="navbar-brand text-white mb-0 ms-3 h1" href="/">Shop-Sphere</a>
			</div>
			<a href="/"><img src="/images/shopping-cart.png" class="logo"></a>
			<form class="d-flex my-auto">
				<input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
				<button class="btn btn-outline-success" type="submit">Search</button>
			</form>
		</div>
	</nav>

	<div class="offcanvas offcanvas-start bg-dark" data-bs-scroll="true" tabindex="-1" id="offcanvasWithBothOptions"
		aria-labelledby="offcanvasWithBothOptionsLabel">
		<div class="offcanvas-header  bg-success">
			{{#if currentlogin}}
			<h5 class="offcanvas-title text-white" id="offcanvasWithBothOptionsLabel">{{currentlogin}}</h5>
			{{else}}
			<a href="/users/log-in" class="text-decoration-none">
				<h5 class="offcanvas-title text-white" id="offcanvasWithBothOptionsLabel">Account</h5>
			</a>
			{{/if}}
			<button type="button" class="btn-close bg-danger closebtn" data-bs-dismiss="offcanvas"
				aria-label="Close"></button>
		</div>
		<div class="offcanvas-body">
			<h5 class="text-success">Actions</h5>
			<ul>
				<li>
					<a href="/" class="text-decoration-none">
						<p class="text-white"><i class="fa-solid fa-home"></i> Home</p>
					</a>
					{{#if seller}}
					<a href="/sellers/login" class="text-decoration-none">
                		<p class="text-white"><i class="fa-solid fa-eye"></i> Product View Page</p>
            		</a>
					{{/if}}
				</li>
			</ul>
			<hr>
			<h5 class="text-success"> Shop by Department</h5>
			<ul>
				<li>
					<a href="#mobile-items" class="text-decoration-none">
						<p class="text-white"><i class="fa-solid fa-mobile-screen me-2"></i> Mobiles</p>
					</a>
				</li>
				<li>
					<a href="#laptop-items" class="text-decoration-none">
						<p class="text-white"><i class="fa-solid fa-laptop me-2"></i> Laptops</p>
					</a>
				</li>
				<li>
					<a href="#cloth-items" class="text-decoration-none">
						<p class="text-white"><i class="fa-solid fa-shirt me-2"></i> Clothes</p>
					</a>
				</li>
				<li>
					<a href="#other-items" class="text-decoration-none">
						<p class="text-white"><i class="fa-solid fa-shop me-2"></i> Other items</p>
					</a>
				</li>
			</ul>
			<hr>
			<h5 class="text-success"> Order Details</h5>
			<ul>
				{{#if seller}}
				<li>
					<a href="/sellers/allorders" class="text-decoration-none">
						<p class="text-white"><i class="fa-solid fa-bag-shopping me-2"></i> All Orders</p>
					</a>
				</li>
				{{else}}
				<li>
					<a href="/users/my-orders" class="text-decoration-none">
						<p class="text-white"><i class="fa-solid fa-bag-shopping me-2"></i> My Orders</p>
					</a>
				</li>
				<li>
					<a href="/users/cart" class="text-decoration-none">
						<p class="text-white"><i class="fa-solid fa-cart-shopping me-2"></i> Carts</p>
					</a>
				</li>
				{{/if}}
			</ul>
			<hr>
			<h5 class="text-success">Settings</h5>
			<ul>
				{{#if loggedin}}
				{{#if seller}}
				<li>
					<a href="/sellers/log-out" class="text-decoration-none">
						<p class="text-white"><i class="fa-solid fa-right-from-bracket me-2"></i>Log-out</p>
					</a>
				</li>
				{{else}}
				<li>
					<a href="/users/log-out-page" class="text-decoration-none">
						<p class="text-white"><i class="fa-solid fa-right-from-bracket me-2"></i> Log-out</p>
					</a>
				</li>
				{{/if}}
				{{else}}
				<li>
					<a href="/users/log-in" class="text-decoration-none">
						<p class="text-white"><i class="fa-solid fa-right-to-bracket me-2"></i> Log-in</p>
					</a>
				</li>
				{{/if}}
				<li>
					<a href="/admin/settings" class="text-decoration-none">
						<p class="text-white"><i class="fa-solid fa-gear me-2"></i> Settings</p>
					</a>
				</li>
			</ul>
		</div>
	</div>
	{{{body}}}
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
	integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
	</script>

</html>