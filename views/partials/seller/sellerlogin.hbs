<style>
    .formcontent{
        box-shadow: 0px 0px 20px black;
        border: solid 1px rgb(27, 150, 76);
        margin-top: 70px;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-10 col-md-6 bg-dark rounded formcontent">
            <h4 class="text-center text-warning mt-1">Log-in</h4>
            <form method="post" action="/sellers/log-in" onkeyup="allowLogBtn()">
                <div class="form-group col-12 p-1">
                    <label for="userusername" class="text-success p-2">Email</label>
                    <input type="email" class="form-control" name="email" placeholder="example@email.com" id="email">
                </div>
                <div class="form-group col-12 p-1">
                    <label for="userusername" class="text-success p-2">Seller ID</label>
                    <input type="text" class="form-control" name="sellerid" placeholder="@sellerID12.." id="uname">
                </div>
                <div class="form-group col-12 p-1">
                    <label for="userpassword" class="text-success p-2">Password</label>
                    <input type="password" class="form-control" name="password" placeholder="Password" id="upass">
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-success disabled ps-5 pe-5 mt-3" id="logbtn">Log in</button>
                </div>
            </form>
            <div class="row mb-2">
                <div class="col-6">
                    <a href="" class="text-decoration-none m-2">forgot password</a>
                </div>
                <div class="col-6  text-end">
                    <a href="/sellers/sign-in" class="text-decoration-none m-2">don't have account?</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function allowLogBtn(){
        if(document.getElementById('uname').value != "" && document.getElementById('upass').value != "" && document.getElementById('email').value != ""){
            document.getElementById('logbtn').classList.remove('disabled');
        }
    }
</script>