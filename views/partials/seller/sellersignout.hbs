<style>
    .container {
        margin-top: 70px;
    }
    .formcontent{
        box-shadow: 0px 0px 20px black;
        border: solid 1px rgb(27, 150, 76);
    }
</style>

<div class="container mb-5">
    <div class="row justify-content-center">
        <div class="col-10 col-md-6 bg-dark rounded formcontent">
            <h4 class="text-center text-warning mt-1">Sign-out</h4>
            <form method="post" action="/sellers/sign-out">
                <div class="form-group col-12 p-1">
                    <label for="sellerid" class="text-success p-2">Seller ID</label>
                    <input type="text" class="form-control" name="sellerid" placeholder="@sellerid">
                </div>
                <div class="form-group col-12 p-1">
                    <label for="useremail" class="text-success p-2">Email</label>
                    <input type="email" class="form-control" name="email" placeholder="Phone Number">
                </div>
                <div class="form-group col-12 p-1">
                    <label for="usermobno" class="text-success p-2">Mobile Number</label>
                    <input type="number" class="form-control" name="mbnumber" placeholder="Phone Number">
                </div>
                <div class="form-group col-12 p-1">
                    <label for="userpassword" class="text-success p-2">Password</label>
                    <input type="password" class="form-control" name="password" placeholder="Password">
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-success ps-5 pe-5 mt-3">Sign-Out</button>
                </div>
            </form>
        </div>
    </div>
</div>
