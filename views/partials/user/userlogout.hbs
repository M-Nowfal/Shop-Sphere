<style>
    .formcontent{
        box-shadow: 0px 0px 20px black;
        border: solid 1px rgb(27, 150, 76);
        margin-top: 70px;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-10 col-md-6 bg-dark rounded formcontent">
            <h4 class="text-center text-warning mt-1">Log-out</h4>
            <form method="post" action="/users/log-out" onkeyup="allowLogBtn()">
                <div class="form-group col-12 p-1">
                    <label for="userusername" class="text-success p-2">Username</label>
                    <input type="text" class="form-control" name="username" placeholder="@username" id="uname">
                </div>
                <div class="form-group col-12 p-1">
                    <label for="useremail" class="text-success p-2">Email</label>
                    <input type="text" class="form-control" name="email" placeholder="example@email.com" id="email">
                </div>
                <div class="form-group col-12 p-1">
                    <label for="userpassword" class="text-success p-2">Password</label>
                    <input type="password" class="form-control" name="password" placeholder="Password" id="upass">
                </div>
                <div class="text-center">
                    <button type="submit" class="btn disabled btn-success ps-5 pe-5 mt-3" id="logbtn">Log-Out</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function allowLogBtn(){
        if(document.getElementById('uname').value != "" && document.getElementById('upass').value != "" && document.getElementById('email').value != ""){
            document.getElementById('logbtn').classList.remove('disabled');
        }
    }
</script>