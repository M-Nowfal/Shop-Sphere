<style>
    .formcontent{
        box-shadow: 0px 0px 20px black;
        border: solid 1px rgb(27, 150, 76);
        margin-top: 75px;
    }
</style>

<div class="container mb-5">
    <div class="row justify-content-center">
        <div class="col-10 bg-dark rounded formcontent">
            <h4 class="text-center text-warning mt-1">Address Details</h4>
            <form method="post" action="/users/placeorder">
                <div class="form-row">
                    <div class="form-group col-12 p-1">
                        <label class="text-success p-2">Email</label>
                        <input type="email" class="form-control" name="email" value="" placeholder="example@email.com">
                    </div>
                </div>
                <div class="d-flex flex-wrap">
                    <div class="col-12 col-sm-6 p-1">
                        <label class="text-success p-2">State</label>
                        <input type="text" class="form-control" name="state" value="" placeholder="state">
                    </div>
                    <div class="col-12 col-sm-6 p-1">
                        <label class="text-success p-2">City</label>
                        <input type="text" class="form-control" name="city" value="" placeholder="city">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-12 p-1">
                        <label class="text-success p-2">Area</label>
                        <input type="text" class="form-control" name="area" value="" placeholder="area">
                    </div>
                    <div class="form-group col-12 p-1">
                        <label class="text-success p-2">Street</label>
                        <input type="text" class="form-control" name="street" value="" placeholder="street">
                    </div>
                    <div class="form-group col-12 p-1">
                        <label class="text-success p-2">Door No</label>
                        <input type="text" class="form-control" name="doorno" value="" placeholder="Door:No">
                    </div>
                    <div class="form-group col-12 p-1">
                        <label class="text-success p-2">Pincode</label>
                        <input type="number" class="form-control" name="pincode" value="" placeholder="pincode">
                    </div>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-success ps-5 pe-5 mt-3" name="pno" value="{{productno}}">Place Order</button>
                </div>
            </form>
        </div>
    </div>
</div>