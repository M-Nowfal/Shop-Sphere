<style>
    .container {
        margin-top: 80px;
    }

    ul {
        list-style-type: none;
    }
</style>
<section>
    <div class="container">
        <div class="row justify-content-center">
            {{#each orderinfo}}
            <div class="col-10 col-sm-8 col-md-6 col-lg-4 col-xl-3 justify-content-center">
                <div class="card text-center mb-4">
                    <div class="d-flex flex-wrap align-items-center justify-content-center">
                        <div class="col-6 col-sm-10">
                            <img src="{{this.image}}" class="card-img-top" alt="..." style="height: 220px;">
                        </div>
                        <div class="col-6 col-sm-10">
                            <div class="card-body">
                                <h5 class="card-title">{{this.title_name}}</h5>
                                <h3 class="card-title"><sup><span
                                            class="fs-6 text-secondary">₹</span></sup>{{this.price}}</h3>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <p class="card-text">{{this.description}}</p>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-10">
                            <table>
                                <tr>
                                    <td>
                                        <h5 class="text-dark">Delevery fee </h5>
                                    </td>
                                    <td class="text-danger">
                                        <h5> ₹40</h5>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <h4 class="text-primary">Total Amount </h4>
                                    </td>
                                    <td class="text-warning">
                                        <h5> ₹{{add this.price 40}}</h5>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <div class="text-center">
                        <form action="/users/cancelorder" method="post">
                            <button type="submit" name="cancelno" value="{{this.no}}"
                                class="btn btn-success rounded p-2 mt-5" style="width: 80%;">Cancel Order</button>
                        </form>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>